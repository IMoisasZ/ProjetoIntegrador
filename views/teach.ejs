<%- include('./partials/head') %>

<%- include('./partials/header') %>

  <main>

    <div class="learnteachtitle">
      <h1 class="main-title">ensinar</h1>
    </div>

    <div class="main-content">

      <div class="main-box ">

        <!-- <div class="left">
          <a href="javascript:history.back()">
            <img src="/images/left.svg" alt="back">
          </a>
          </div> -->

        <section class="main-todo">
          
          <h1 class="main-title">o que <br> deseja fazer?</h1>
          
          <div class="main-buttons">
            <% if(b > 0 && c > 0) { %>
              <a href="/pages/requests"><button type="submit" class="btn mt-3 main-button" id="learnteach-request">verificar solicitações</button></a>
              <a href="/pages/create/publicated"><button class="btn mt-3 main-button" id="learnteach-publicated">meus cursos</button></a>  
              <a href="/pages/create"><button class="btn mt-3 main-button" id="learnteach-create">publicar novo curso</button></a>
            <% } else if(b > 0 && c == 0) { %>
              <a href="/pages/requests"><button type="submit" class="btn mt-3 main-button" id="learnteach-request">verificar solicitações</button></a>
              <button type="submit" class="btn mt-3 main-button" id="learnteach-publicated">meus cursos</button>  
              <a href="/pages/create"><button class="btn mt-3 main-button" id="learnteach-create">publicar novo curso</button></a>
              <div class="alert alert-danger" role="alert" id="msg-publicated" hidden>
                <li>Você não tem cursos publicados! Bora <a href="/pages/create"> publicar </a>um?</li>
              </div> 
            <%}else if (b == 0 && c > 0) { %>
              <button type="submit" class="btn mt-3 main-button" id="learnteach-request">verificar solicitações</button>
              <a href="/pages/create/publicated"><button class="btn mt-3 main-button" id="learnteach-publicated">meus cursos</button></a>
              <a href="/pages/create"><button class="btn mt-3 main-button" id="learnteach-create">publicar novo curso</button></a>
              <div class="alert alert-danger" role="alert" id="msg-request" hidden>
                <li>Você não tem solicitações pendentes!</li>
              </div> 
            <% }else { %>
              <button type="submit" class="btn mt-3 main-button" id="learnteach-request">verificar solicitações</button>
              <button type="submit" class="btn mt-3 main-button" id="learnteach-publicated">meus cursos</button> 
              <a href="/pages/create"><button class="btn mt-3 main-button" id="learnteach-create">publicar novo curso</button></a>
              <div class="alert alert-danger" role="alert" id="msg-publicated" hidden>
                <li>Você não tem cursos publicados! Bora <a href="/pages/create"> publicar </a>um?</li>
              </div>
              <div class="alert alert-danger" role="alert" id="msg-request" hidden>
                <li>Você não tem solicitações pendentes!</li>
              </div>  
            <% } %>
          </div>
        </section>
      </div>

      <div class="main-img">
        <img src="/images/teach.svg" alt="entrar" />
      </div>

