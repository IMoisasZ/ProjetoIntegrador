<%- include('./partials/head') %>

<%- include('./partials/header') %>
  <input id="config-page" type="text" value="config" hidden>
  <main>

    <div class="area-config">
      <div class="container">
        <div class="row">
          <h3 class="title">estatísticas & configurações</h3>
          <div class="col-md-6">
            <div class="card-box cards d-block">
              <div class="card-box time-learning d-block mt-3">
                <div class="card-box">
                    <p class="txt-learning">tempo aprendendo</p>
                    <input type="text" id="time-qty-learning" data-bs-toggle="tooltip" data-bs-placement="top" title="Total de horas aprendendo!" readonly  value="<%= aprendendo %>">
                </div>
              </div>
              <div class="card-box time-teaching d-block">
                <div class="card-box">
                    <p class="txt-teaching">tempo ensinando</p>
                    <input type="text" id="time-qty-teaching" data-bs-toggle="tooltip" data-bs-placement="top" title="Total de horas ensinando!" readonly value="<%= ensinando %>">
                </div>
              </div>
            </div>
          </div>
            <div class="col-md-6">
              <form action="" class="form-config" id="form-config">
                <div class="area-config">
                  <h1 class="main-title-config">alterar senha</h1>
                  <div class="config-box">
                    <i class="bx bx-lock-alt config-icon"></i>
                    <input type="password" name="senhaAtual" placeholder="digite a senha atual" class="config-name-input" />
                  </div>
                  <div class="config-box">
                    <i class="bx bx-lock-alt config-icon"></i>
                    <input type="password" name="alterarSenha" placeholder="digite a nova senha" class="config-user-input" />
                  </div>
  
                  <div class="login-box">
                    <i class="bx bx-lock-alt config-icon"></i>
                    <input type="password" name="confirmarAlterarSenha" placeholder="confirme a nova senha" class="config-password-input" />
                  </div>
  
                  <div class="btn d-flex">
                    <div class="button-salvar">
                      <a href="#"><button class="btn mt-3 config-button">salvar</button></a>
                    </div>
    
                    <div class="button-cancelar">
                      <a href="/users/config"><button class="btn mt-3 config-button">cancelar</button></a>
                    </div>
                  </div>
                  <div class="button-exclude-account d-flex">
                    <a href="/users/delete"><button type="button" class="btn mt-3 exclude-account-button">excluir conta</button></a>
                  </div>
                </div>
                <div class="image-config">
                  <img src="/images/config.svg" alt="imagem-config" class="img-config">
                </div>
              </form>
            </div>
        </div>
      </div>
    </div>
  </main>
  <%- include('./partials/footer') %>
  <script src="/scripts/script.js"></script>
  </body>
</html>


